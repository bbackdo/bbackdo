<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeamNumActivity">

    <TextView
        android:id="@+id/textPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팀수"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="84dp" />

    <TextView
        android:id="@+id/textPlay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커스텀 벌칙"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="269dp" />

    <TextView
        android:id="@+id/textPlay3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="업을 때"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textPlay2"
        tools:layout_editor_absoluteY="327dp" />

    <Button
        android:id="@+id/buttonFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="16dp"
        android:text="만들기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="16dp"
        android:text="취소"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonFinish" />

    <EditText
        android:id="@+id/editNum"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@+id/textPlay"
        tools:layout_editor_absoluteY="116dp" />

    <EditText
        android:id="@+id/editNum2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="434dp" />

    <EditText
        android:id="@+id/editNum3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="386dp" />

    <EditText
        android:id="@+id/editNum4"
        android:layout_width="0dp"
        android:layout_height="40dp"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="434dp" />

    <EditText
        android:id="@+id/editNum5"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/textPlay3"
        app:layout_constraintTop_toTopOf="@+id/textPlay3" />
</androidx.constraintlayout.widget.ConstraintLayout>