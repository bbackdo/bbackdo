<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/teamimg"
    android:layout_margin="10dp"
    android:layout_width="200dp"
    android:layout_height="250dp">

    <ImageView
        android:id="@+id/developerimg"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_4" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="2px"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="26dp"
        android:background="#BBBBBB"
        app:layout_constraintTop_toBottomOf="@id/developerimg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/developerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        android:textColor="@color/text"
        android:text="김이영"/>

    <TextView
        android:id="@+id/developerinfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:maxHeight="75dp"
        android:text="* 한양대학교 컴퓨터소프트웨어학부\n\n* 유니티 개발, 디자인 담당"
        android:textColor="@color/text"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/developerName"
        app:layout_constraintTop_toBottomOf="@+id/developerName" />


</androidx.constraintlayout.widget.ConstraintLayout>