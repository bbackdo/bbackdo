<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="parcel"
            type="com.eos.caffeinproject.data.CafeData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="55dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/caffe_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tomntoms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"></ImageView>

        <TextView
            android:id="@+id/cafe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/nexon_gothic_lv1_bold"
            android:text="탐앤탐스"
            android:textColor="#000000"
           android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:textSize="13dp"
            android:fontFamily="@font/nexon_gothic_lv1_bold"
            android:text="운영시간 00:00 ~ 24:00"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cafe_name" />

        <TextView
            android:id="@+id/text_dummy_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:fontFamily="@font/nexon_gothic_lv1_bold"
            android:text="김현수(이)가 가져감"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/time" />

        <Button
            android:id="@+id/button_parcel_cancel"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="18dp"
            android:textColor="@color/white"
            android:text="취소"
            android:fontFamily="@font/nexon_gothic_lv1_bold"
            android:textStyle="bold"
            android:background="@drawable/all_button_background"
            android:backgroundTint="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_parcel_delete" />

        <Button
            android:id="@+id/button_parcel_delete"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="18dp"
            android:fontFamily="@font/nexon_gothic_lv1_bold"
            android:text="삭제"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/all_button_background"
            android:backgroundTint="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
