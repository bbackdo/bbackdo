<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/while_background"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/tomntoms"/>
        <TextView
            android:id="@+id/caffe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탐앤탐스"
            android:fontFamily="@font/nexon_gothic_lv1_bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            />
        <ImageView
            android:id="@+id/star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@id/caffe_name"
            app:layout_constraintTop_toBottomOf="@id/logo"
            android:layout_marginTop="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.6"
            android:fontFamily="@font/nexon_gothic_lv1_bold"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/star"
            app:layout_constraintTop_toBottomOf="@id/logo"

            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거리:500m"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/caffe_name"
            android:textSize="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nexon_gothic_lv1_bold"/>
        <TextView
            android:id="@+id/sub_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="혼잡도:"
            app:layout_constraintStart_toEndOf="@id/distance"
            app:layout_constraintTop_toBottomOf="@id/caffe_name"
            android:textSize="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nexon_gothic_lv1_bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            app:layout_constraintStart_toEndOf="@id/sub_title2"
            app:layout_constraintTop_toBottomOf="@id/caffe_name"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:textColor="#f5e020"
            android:fontFamily="@font/nexon_gothic_lv1_bold"/>





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
