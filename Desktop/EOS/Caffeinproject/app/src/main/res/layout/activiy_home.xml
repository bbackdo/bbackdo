<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/sub_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf ="parent"
            android:text="카페:in event"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:textSize="20dp"
            android:fontFamily="@font/nexon_gothic_lv1_bold"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview2"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/sub_event">

            <ViewFlipper
                android:id="@+id/image_slide"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf ="@id/cardview2"
            android:text="성현님을 위한 추천 카페"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:fontFamily="@font/nexon_gothic_lv1_bold"/>

        <ImageView
            android:id="@+id/white_background"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/while_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sub_title" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sub_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/tomntoms"/>
        <TextView
            android:id="@+id/caffe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탐앤탐스"
            android:fontFamily="@font/nexon_gothic_lv1_bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            />
        <ImageView
            android:id="@+id/star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@id/caffe_name"
            app:layout_constraintTop_toBottomOf="@id/logo"
            android:layout_marginTop="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.6"
            android:fontFamily="@font/nexon_gothic_lv1_bold"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/star"
            app:layout_constraintTop_toBottomOf="@id/logo"

            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거리:500m"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/caffe_name"
            android:textSize="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nexon_gothic_lv1_bold"/>
        <TextView
            android:id="@+id/sub_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="혼잡도:"
            app:layout_constraintStart_toEndOf="@id/distance"
            app:layout_constraintTop_toBottomOf="@id/caffe_name"
            android:textSize="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nexon_gothic_lv1_bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            app:layout_constraintStart_toEndOf="@id/sub_title2"
            app:layout_constraintTop_toBottomOf="@id/caffe_name"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:textColor="#f5e020"
            android:fontFamily="@font/nexon_gothic_lv1_bold"/>

        <ImageView
            android:id="@+id/white_background2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/while_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sub_title" />

        <ImageView
            android:id="@+id/logo2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toEndOf="@id/white_background"
            app:layout_constraintTop_toBottomOf="@id/sub_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/starbucks"/>
        <TextView
            android:id="@+id/caffe_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스타벅스"
            android:fontFamily="@font/nexon_gothic_lv1_bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@id/white_background2"
            app:layout_constraintTop_toBottomOf="@id/logo"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            />
        <ImageView
            android:id="@+id/star2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@id/caffe_name2"
            app:layout_constraintTop_toBottomOf="@id/logo2"
            android:layout_marginTop="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.7"
            android:fontFamily="@font/nexon_gothic_lv1_bold"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/star2"
            app:layout_constraintTop_toBottomOf="@id/logo2"

            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/distance2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거리:550m"
            app:layout_constraintStart_toStartOf="@id/white_background2"
            app:layout_constraintTop_toBottomOf="@id/caffe_name2"
            android:textSize="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nexon_gothic_lv1_bold"/>
        <TextView
            android:id="@+id/sub_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="혼잡도:"
            app:layout_constraintStart_toEndOf="@id/distance2"
            app:layout_constraintTop_toBottomOf="@id/caffe_name2"
            android:textSize="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nexon_gothic_lv1_bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            app:layout_constraintStart_toEndOf="@id/sub_title3"
            app:layout_constraintTop_toBottomOf="@id/caffe_name"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:textColor="#000000"
            android:fontFamily="@font/nexon_gothic_lv1_bold"/>
        <View
            android:id="@+id/view_login_upLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e3d9c5"
            app:layout_constraintTop_toBottomOf="@id/white_background2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_login_upLine"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="8dp"
            android:text="사업자 정보 확인  |  이용약관  |  전자금융거래이용약관  |  개인정보처리방침 \n(주)스위트 컴퍼니\n카페:in은 통신판매중개자이며 통신판매의 당사자가 아닙니다.\n따라서 카페:in은 상품, 거래 정보 및 거래에 책임을 지지 않습니다. "
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
